# screenshot
# scrot & gimp - root
bindsym Print exec scrot -e 'mv $f ~/Desktop/screenshots/'
# scrot & gimp - select window or rectangle
bindsym --release $mod+Print exec scrot -s -e 'mv $f ~/Desktop/screenshots/$f'

